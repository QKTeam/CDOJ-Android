<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/CardView_Item"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="4dp">

        <TextView
            android:ellipsize="end"
            android:id="@+id/contest_title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="比赛标题"
            style="@style/TextTitle"/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/contest_time"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="2017-07-24 17:18:54"
                style="@style/TextContent"/>

            <TextView
                android:id="@+id/contest_rest_time"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="10h:1m:4s"
                style="@style/TextContent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/contest_id"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="ID:123"
                style="@style/TextFoot"/>

            <cn.edu.uestc.acm.cdoj.ui.custom_view.ContestStatusTextView
                android:gravity="center"
                android:id="@+id/contest_status"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Ended"
                style="@style/TextFoot"/>

            <cn.edu.uestc.acm.cdoj.ui.custom_view.ContestTypeTextView
                android:gravity="center"
                android:id="@+id/contest_type"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Private"
                style="@style/TextFoot"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>